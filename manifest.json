{
    "manifest_version": 2,
    "name": "Talkie",
    "version": "0.1.1",
    "description": "Transform your meet to a walkie talkie. Just enter a meet url and let 'Talkie' do the boring stuff. Once you entered the meeting press and hold <Space> to talk.",
    "web_accessible_resources": [
        "resources/**"
    ],
    "content_scripts": [
        {
          "matches": [
            "https://meet.google.com/*"
          ],
          "js": ["src/js/script.js"]
        }
    ],
    "icons": {
        "16": "src/img/talkie_16.png",
        "32": "src/img/talkie_32.png",
        "128": "src/img/talkie_128.png"
    }
}